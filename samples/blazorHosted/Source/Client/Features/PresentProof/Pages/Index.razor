@namespace BlazorHosted.Features.PresentProofs.Pages
@inherits BaseComponent
@page "/proofs"

  <div data-qa="@TestId">
    <br />
    <h1>Proofs</h1>
    <button class="btn btn-primary" @onclick=@CreateClick>Create</button>
    <button class="btn btn-primary" @onclick=@ViewClick>View</button>

    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>ConnectionId</th>
          <th>B</th>
          <th>C</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var proof in PresentProofState.ProofsAsList)
        {
          <tr>
            <td>@proof.Id</td>
            <td>@proof.ConnectionId</td>
            <td>X</td>
            <td>Y</td>
            <td>
              Details | Delete
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>